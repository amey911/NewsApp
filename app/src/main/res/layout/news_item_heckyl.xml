<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"


    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/news_item_bg_small"
            >

            <TextView
                android:id="@+id/news_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="News Title"
                android:textStyle="bold"
                android:textSize="17sp"
                >

            </TextView>


            <TextView
                android:id="@+id/news_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:layout_below="@id/news_item_title"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="17sp">
            </TextView>


            <TextView
                android:id="@+id/news_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"

                android:layout_below="@id/news_item_desc"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp">
            </TextView>




            <TextView
                android:id="@+id/news_item_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textStyle="bold"
                android:layout_below="@id/news_item_desc"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp">
            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>